<div class="container">
  <div class="show-group">
    <h1 class="list-group">
        <%= @cocktail.name %></h1>
        <% @cocktail.doses.each do |dose| %>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to 'delete', dose_path(dose), method: :delete %>
          <% end %>
        <!-- <div class="show-image"> -->
          <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill, class: "show-image" %>
        <!-- </div> -->
        <div class="show-buttons">
          <%= link_to 'Add new dose', new_dose_path(@cocktail), class: "btn btn-ghost-show" %>
          <%= link_to 'Back', cocktails_path, class: "btn btn-ghost-show" %>
        </div>
      </div>
    </div>
  </div>
</div>

